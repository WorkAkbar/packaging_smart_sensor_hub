<odoo>
    <record id="view_machine_performance_form" model="ir.ui.view">
        <field name="name">machine.performance.tree</field>
        <field name="model">machine.performance</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="device_id"/>
                        <field name="temperature"/>
                        <field name="pressure"/>
                        <field name="speed"/>
                        <field name="timestamp"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_machine_performance_tree" model="ir.ui.view">
        <field name="name">machine.performance.tree</field>
        <field name="model">machine.performance</field>
        <field name="arch" type="xml">
            <tree>
                <field name="device_id"/>
                <field name="temperature"/>
                <field name="pressure"/>
                <field name="speed"/>
                <field name="timestamp"/>
            </tree>
        </field>
    </record>
</odoo>
